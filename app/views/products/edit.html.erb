<div style="background-color: grey; padding: 20px; text-align: center; font-family: Arial, sans-serif;">
  <h1 style="font-size: 24px;">Editing product</h1>

  <%= render "form", product: @product %>

  <% if @product.image_url.present? %>
    <div style="margin-top: 20px;">
      <%= image_tag @product.image_url, alt: "Product Image", style: "max-width: 50%; height: auto;" %>
    </div>
  <% end %>

  <div style="margin-top: 20px;">
    <%= link_to "Show this product", @product, class: "product-link" %> |
    <%= link_to "Back to products", products_path, class: "product-link" %>
  </div>
</div>

<style>
  .product-link {
    color: blue;
    text-decoration: none;
    display: inline-block;
    padding: 5px 10px;
    border: 1px solid blue;
    border-radius: 5px;
    margin-top: 10px;
    transition: background-color 0.3s, color 0.3s;
    font-family: Arial, sans-serif;
  }

  .product-link:hover {
    background-color: grey;
    color: white;
  }
</style>
