<head>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Editing product</h1>

    <div class="bg-gray-200 rounded-lg p-4 mb-4">
      <%= render "form", product: @product %>
    </div>

    <% if @product.image_url.present? %>
      <div class="mb-4">
        <img src="<%= @product.image_url %>" alt="Product Image" class="rounded-lg">
      </div>
    <% end %>

    <div class="flex justify-between">
      <div>
        <%= link_to "Show this product", @product, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
      <div>
        <%= link_to "Back to products", products_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</body>

