<div id="<%= dom_id product %>">
  <p>
    <strong>Title:</strong>
    <%= product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Reviews:</strong>
    <%= product.reviews %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= product.image_url %>
    <%= image_tag(product.image_url) %>
  </p>

</div>


</div>
